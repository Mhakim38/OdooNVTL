<odoo>
    <template id="membership_application_form2" name="Membership Application">
        <t t-call="website.layout">
            <div class="oe_structure oe_empty"/>
            <div class="container mt-3">
                <form action="/membership/submit" method="post" enctype="multipart/form-data">

                    <!-- Application info -->
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Application Date</label>
                        <div class="col-md-8">
                            <input type="date" name="application_date" class="form-control" required="1"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Your Name</label>
                        <div class="col-md-8">
                            <input type="text" name="your_name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Designation</label>
                        <div class="col-md-8">
                            <input type="text" name="designation" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Company Name</label>
                        <div class="col-md-8">
                            <input type="text" name="company_name" class="form-control"/>
                        </div>
                    </div>
                    <div class="oe_structure oe_empty"/>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Membership Type</label>
                        <div class="col-md-8">
                            <select name="plan_id" required="required" class="form-control">
                              <t t-foreach="plans" t-as="p">
                                <option t-att-value="p.id">
                                  <t t-esc="p.name"/>
                                </option>
                              </t>
                            </select>
                        </div>
                    </div>

                    <!-- Proposer / Seconder -->
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Proposer Name</label>
                        <div class="col-md-8">
                            <input type="text" name="proposer_name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Proposer Company</label>
                        <div class="col-md-8">
                            <select name="proposer_company" class="form-control">
                                <t t-foreach="partners" t-as="p">
                                    <option t-att-value="p.id"><t t-esc="p.name"/></option>
                                </t>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Seconder Name</label>
                        <div class="col-md-8">
                            <input type="text" name="seconder_name" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Seconder Company</label>
                        <div class="col-md-8">
                            <select name="seconder_company" class="form-control">
                                <t t-foreach="partners" t-as="p">
                                    <option t-att-value="p.id"><t t-esc="p.name"/></option>
                                </t>
                            </select>
                        </div>
                    </div>
                    <div class="oe_structure oe_empty"/>

                    <!-- Company Info -->
                    <h4 class="mt-4 mb-3">Company / Association Details</h4>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Name of Company / Association / Institution</label>
                        <div class="col-md-8">
                            <input type="text" name="company_name" class="form-control" placeholder="null" required="1"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Registration Address</label>
                        <div class="col-md-8">
                            <input type="text" name="registration_address" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Business Address</label>
                        <div class="col-md-8">
                            <input type="text" name="business_address" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Telephone No</label>
                        <div class="col-md-8">
                            <input type="text" name="telephone" class="form-control"/>
                        </div>
                    </div>

                    <!-- Business Entity -->
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Business Entity</label>
                        <div class="col-md-8">
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity1" value="Private Limited"/>
                              <label class="form-check-label" for="entity1">Private Limited</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity2" value="Limited"/>
                              <label class="form-check-label" for="entity2">Limited</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity3" value="Sole Proprietorship"/>
                              <label class="form-check-label" for="entity3">Sole Proprietorship</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity4" value="Partnership"/>
                              <label class="form-check-label" for="entity4">Partnership</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity5" value="Subsidiary"/>
                              <label class="form-check-label" for="entity5">Subsidiary</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity6" value="Association"/>
                              <label class="form-check-label" for="entity6">Association</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity7" value="Academic Institution"/>
                              <label class="form-check-label" for="entity7">Academic Institution</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity8" value="Software Applications Vendor"/>
                              <label class="form-check-label" for="entity8">Software Applications Vendor</label>
                            </div>

                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="business_entity" id="entity9" value="Suppliers"/>
                              <label class="form-check-label" for="entity9">Suppliers</label>
                            </div>

                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Authorized Representative 1</label>
                        <div class="col-md-8">
                            <input type="text" name="auth_rep_1" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Authorized Representative 2</label>
                        <div class="col-md-8">
                            <input type="text" name="auth_rep_2" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Business Registration No.</label>
                        <div class="col-md-8">
                            <input type="text" name="company_reg_no" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Date of Commencement</label>
                        <div class="col-md-8">
                            <input type="date" name="incorporation_date" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Authorized Capital</label>
                        <div class="col-md-8">
                            <input type="number" step="0.01" name="authorized_capital" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Paid Up Capital</label>
                        <div class="col-md-8">
                            <input type="number" step="0.01" name="paid_up_capital" class="form-control"/>
                        </div>
                    </div>

                    <!-- Name of Bankers -->
                    <h4 class="mt-4 mb-3">Bankers</h4>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Select Bank</label>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="maybank" value="Maybank (Malayan Banking Berhad)"/>
                                        <label class="form-check-label" for="maybank">Maybank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="cimb" value="CIMB Bank"/>
                                        <label class="form-check-label" for="cimb">CIMB Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="public_bank" value="Public Bank Berhad"/>
                                        <label class="form-check-label" for="public_bank">Public Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="rhb" value="RHB Bank"/>
                                        <label class="form-check-label" for="rhb">RHB Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="ambank" value="AmBank"/>
                                        <label class="form-check-label" for="ambank">AmBank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="bank_islam" value="Bank Islam Malaysia"/>
                                        <label class="form-check-label" for="bank_islam">Bank Islam</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="bank_rakyat" value="Bank Rakyat"/>
                                        <label class="form-check-label" for="bank_rakyat">Bank Rakyat</label>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="hsbc" value="HSBC Bank Malaysia"/>
                                        <label class="form-check-label" for="hsbc">HSBC Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="ocbc" value="OCBC Bank Malaysia"/>
                                        <label class="form-check-label" for="ocbc">OCBC Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="uob" value="UOB Malaysia"/>
                                        <label class="form-check-label" for="uob">UOB Malaysia</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="muamalat" value="Bank Muamalat"/>
                                        <label class="form-check-label" for="muamalat">Bank Muamalat</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="sc" value="Standard Chartered Malaysia"/>
                                        <label class="form-check-label" for="sc">Standard Chartered</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="affin" value="Affin Bank"/>
                                        <label class="form-check-label" for="affin">Affin Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="alliance" value="Alliance Bank"/>
                                        <label class="form-check-label" for="alliance">Alliance Bank</label>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="agrobank" value="Agrobank"/>
                                        <label class="form-check-label" for="agrobank">Agrobank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="kfh" value="Kuwait Finance House"/>
                                        <label class="form-check-label" for="kfh">Kuwait Finance House</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="citibank" value="Citibank Malaysia"/>
                                        <label class="form-check-label" for="citibank">Citibank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="al_rajhi" value="Al Rajhi Bank"/>
                                        <label class="form-check-label" for="al_rajhi">Al Rajhi Bank</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="bnp" value="BNP Paribas Malaysia"/>
                                        <label class="form-check-label" for="bnp">BNP Paribas</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="bank_name" id="scotiabank" value="Scotiabank Malaysia"/>
                                        <label class="form-check-label" for="scotiabank">Scotiabank</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>



                   <!-- Kastam -->
                    <h4 class="mt-4 mb-3">Kastam</h4>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="kastam_registration_number">Customs Approved Registration No.</label>
                        <div class="col-md-8">
                            <input type="text" name="kastam_registration_number" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="expiry_date">Expiry Date</label>
                        <div class="col-md-8">
                            <input type="date" name="expiry_date" id="expiry_date" class="form-control"/>
                        </div>
                    </div>
                    <div class="oe_structure oe_empty"/>

                    <!-- File Uploads with Odoo Style -->
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="approval_letter">Approval Letter (BF/BS/BZ or others)</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="approval_letter"
                                   id="approval_letter"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="audited_account">Last Audited Account</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="audited_account"
                                   id="audited_account"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="roc_rob">ROC / ROB</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="roc_rob"
                                   id="roc_rob"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="form_9">Form 9</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="form_9"
                                   id="form_9"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="form_13">Form 13</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="form_13"
                                   id="form_13"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="form_49">Form 49</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="form_49"
                                   id="form_49"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="form_24">Form 24</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="form_24"
                                   id="form_24"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>

                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label" for="company_logo">Company Logo</label>
                        <div class="col-md-8">
                            <input type="file" class="form-control s_website_form_input"
                                   name="company_logo"
                                   id="company_logo"
                                   data-max-files-number="1"
                                   data-max-file-size="5"
                                   data-fill-with="undefined"/>
                        </div>
                    </div>


                    <!-- Services -->
                    <h4 class="mt-4 mb-3">Services</h4>
                    <div class="form-group row mb-3">
                        <label class="col-md-4 col-form-label">Select Services</label>
                        <div class="col-md-8">
                            <div class="form-check"><input type="checkbox" name="forwarding_agents" class="form-check-input" id="forwarding_agents"/><label class="form-check-label" for="forwarding_agents">Forwarding Agents / Customs Brokerage</label></div>
                            <div class="form-check"><input type="checkbox" name="last_mile_delivery" class="form-check-input" id="last_mile_delivery"/><label class="form-check-label" for="last_mile_delivery">Last Mile Delivery</label></div>
                            <div class="form-check"><input type="checkbox" name="transport_operators" class="form-check-input" id="transport_operators"/><label class="form-check-label" for="transport_operators">Transport Operators</label></div>
                            <div class="form-check"><input type="checkbox" name="shipping_agent" class="form-check-input" id="shipping_agent"/><label class="form-check-label" for="shipping_agent">Shipping Agent</label></div>
                            <div class="form-check"><input type="checkbox" name="freight_forwarding" class="form-check-input" id="freight_forwarding"/><label class="form-check-label" for="freight_forwarding">Freight Forwarding</label></div>
                            <div class="form-check"><input type="checkbox" name="courier_services" class="form-check-input" id="courier_services"/><label class="form-check-label" for="courier_services">Courier Services</label></div>
                            <div class="form-check"><input type="checkbox" name="warehouse_operators" class="form-check-input" id="warehouse_operators"/><label class="form-check-label" for="warehouse_operators">Warehouse Operators</label></div>
                            <div class="form-check"><input type="checkbox" name="combined_transport_operators" class="form-check-input" id="combined_transport_operators"/><label class="form-check-label" for="combined_transport_operators">Combined Transport Operators</label></div>
                            <div class="form-check"><input type="checkbox" name="nvocc" class="form-check-input" id="nvocc"/><label class="form-check-label" for="nvocc">NVOCC</label></div>
                            <div class="form-check"><input type="checkbox" name="ancillary_services" class="form-check-input" id="ancillary_services"/><label class="form-check-label" for="ancillary_services">Ancillary Services</label></div>
                        </div>
                    </div>

                    <div class="oe_structure oe_empty"/>

                    <div class="form-group row mb-3 mt-4">
                        <div class="col-md-8 offset-md-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                </form>
                <div class="oe_structure oe_empty"/>
            </div>
        </t>
    </template>
</odoo>
