<odoo>
    <!-- Wizard View -->
    <record id="view_import_circular_files_wizard" model="ir.ui.view">
        <field name="name">import.circular.files.wizard.form</field>
        <field name="model">import.circular.files.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Circular Files">
                <group>
                    <field name="folder_path"/>
                    <field name="excel_file" filename="excel_filename"/>
                    <field name="excel_filename" invisible="1"/>
                </group>
                <group>
                    <field name="result_message" nolabel="1" readonly="1" colspan="2"/>
                </group>
                <footer>
                    <button string="Import" type="object" name="action_import_files"
                            class="btn-primary"
                           invisible="result_message != False"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Wizard -->
    <record id="action_import_circular_files_wizard" model="ir.actions.act_window">
        <field name="name">Import Circular Files</field>
        <field name="res_model">import.circular.files.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->

    <menuitem id="menu_company_circular_root"
              name="Company Circulars"
              sequence="10"/>

    <menuitem id="menu_circular_import_root"
              name="Circular Import"
              parent="menu_company_circular_root"
              action="action_import_circular_files_wizard"
              sequence="50"/>
</odoo>
