<odoo>
    <!-- Portal Circulars List -->
    <template id="portal_circulars_template" name="Portal Circulars List">
        <t t-call="website.layout">
            <div class="container mt16">
                <h1>My Circulars</h1>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Subject</th>
                            <th>Category</th>
                            <th>Attachments</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="circulars" t-as="c">
                            <tr>
                                <td><t t-esc="c.date"/></td>
                                <td><t t-esc="c.name"/></td>
                                <td><t t-esc="c.category"/></td>
                                <td>
                                    <t t-foreach="c.attachment_ids" t-as="a">
                                        <a t-att-href="'/web/content/%s?download=true' % a.id" t-esc="a.name"/>
                                        <br/>
                                    </t>
                                </td>
                                <td>
                                    <a t-att-href="'/my/circulars/%s' % c.id" class="btn btn-sm btn-primary">View</a>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <!-- Portal Circular Detail -->
    <template id="portal_circular_detail_template" name="Portal Circular Detail">
        <t t-call="website.layout">
            <div class="container mt16">
                <h1><t t-esc="circular.name"/></h1>
                <p><strong>Date:</strong> <t t-esc="circular.date"/></p>
                <p><strong>Category:</strong> <t t-esc="circular.category"/></p>
                <p><strong>Content:</strong></p>
                <div t-field="circular.body"/>
                <p><strong>Attachments:</strong></p>
                <ul>
                    <t t-foreach="circular.attachment_ids" t-as="a">
                        <li><a t-att-href="'/web/content/%s?download=true' % a.id" t-esc="a.name"/></li>
                    </t>
                </ul>
                <a href="/my/circulars" class="btn btn-secondary mt16">Back to List</a>
            </div>
        </t>
    </template>
</odoo>
