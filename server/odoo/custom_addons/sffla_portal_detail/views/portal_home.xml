<odoo>
    <!-- Extend portal layout -->
    <template id="custom_portal_layout" inherit_id="portal.portal_layout">
        <xpath expr="//div[@id='wrap']" position="before">

            <style>
                .custom-navbar {
                    background-color: #084d88;
                    padding: 10px;
                    display: flex;
                    justify-content: center;
                    gap: 30px;
                }
                .custom-navbar a {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    color: white;
                    text-decoration: none;
                    padding: 12px 20px;
                    border-radius: 6px;
                    transition: background-color 0.2s, transform 0.2s;
                }
                .custom-navbar a:hover {
                    background-color: #053d6e;
                    transform: scale(1.05);
                }
                .custom-navbar i {
                    font-size: 18px;
                    margin-bottom: 4px;
                }
                .custom-navbar span {
                    font-size: 13px;
                    font-weight: 500;
                }
            </style>

            <div class="custom-navbar">
                <a href="/my/home">
                    <i class="fa fa-home"></i>
                    <span>Home</span>
                </a>
                <a href="/my/partner">
                    <i class="fa fa-id-card-o"></i>
                    <span>My Details</span>
                </a>
                <a href="/my/account">
                    <i class="fa fa-building"></i>
                    <span>Edit Profile</span>
                </a>
                <a href="/my/circulars">
                    <i class="fa fa-info"></i>
                    <span>Circulars</span>
                </a>

            </div>

        </xpath>
    </template>
</odoo>
