<odoo>
    <record id="view_partner_form_kastam" model="ir.ui.view">
        <field name="name">res.partner.form.kastam</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- Insert new pages after Internal Notes tab -->
            <xpath expr="//page[@name='internal_notes']" position="after">

                <!-- Kastam Tab -->
                <page string="Kastam Details">
                    <separator string="Kastam" colspan="2"/>
                    <group>
                        <field name="kastam_registration_number"/>
                        <field name="expiry_date"/>
                    </group>

                    <separator string="Kastam Attachments" colspan="2"/>
                    <group>
                        <field name="approval_letter" filename="approval_letter_filename" widget="binary"/>
                        <field name="approval_letter_filename" invisible="1"/>

                        <field name="audited_account" filename="audited_account_filename" widget="binary"/>
                        <field name="audited_account_filename" invisible="1"/>

                        <field name="roc_rob" filename="roc_rob_filename" widget="binary"/>
                        <field name="roc_rob_filename" invisible="1"/>

                    </group>
                </page>

                <!-- Services Tab -->
                <page string="Services">
                    <separator string="Services" colspan="2"/>
                    <group col="2">
                        <group>
                            <field name="shipping_agent"/>
                            <field name="forwarding_agents"/>
                            <field name="last_mile_delivery"/>
                            <field name="transport_operators"/>
                            <field name="nvocc"/>
                        </group>
                        <group>
                            <field name="freight_forwarding"/>
                            <field name="courier_services"/>
                            <field name="warehouse_operators"/>
                            <field name="combined_transport_operators"/>
                            <field name="ancillary_services"/>
                        </group>
                    </group>
                </page>

                <!-- SSM Tab -->
                <page string="SSM Details">
                    <group col="2">

                        <group string="Company Information">
                            <field name="incorporation_date"/>
                            <field name="company_reg_no"/>
                            <field name="business_entity"/>
                            <field name="authorized_capital"/>
                            <field name="paid_up_capital"/>
                            <field name="malaysia_bank"/>
                        </group>

                        <group string="Authorized Representative">
                            <field name="registration_address"/>
                            <field name="auth_rep_1"/>
                            <field name="auth_rep_2"/>
                        </group>

                        <separator string="SSM Documents" colspan="2"/>
                        <group>
                            <field name="form_9" filename="form_9_filename" widget="binary"/>
                            <field name="form_9_filename" invisible="1"/>

                            <field name="form_13" filename="form_13_filename" widget="binary"/>
                            <field name="form_13_filename" invisible="1"/>
                        </group>

                        <group>
                            <field name="form_49" filename="form_49_filename" widget="binary"/>
                            <field name="form_49_filename" invisible="1"/>

                            <field name="form_24" filename="form_24_filename" widget="binary"/>
                            <field name="form_24_filename" invisible="1"/>
                        </group>

                    </group>
                </page>

            </xpath>

        </field>
    </record>
</odoo>
