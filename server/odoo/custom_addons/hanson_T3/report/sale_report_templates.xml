<odoo>
    <template id="report_saleorder_document_inherit_hanson" inherit_id="sale.report_saleorder_document">
        <!-- Insert greeting & subject at the very beginning of the page -->
        <xpath expr="//div[@class='page']" position="before">
            <div class="page">
                <!-- Greeting -->
                <p>
                    <strong>Dear <t t-esc="doc.partner_id.name or ''"/>,</strong>
                </p>

                <!-- Subject styled -->
                <t t-if="doc.quotation_subject">
                    <p style="font-size:18px; font-weight: 900; text-decoration:underline;">
                        SUBJECT: <t t-esc="doc.quotation_subject.upper()"/>
                    </p>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
